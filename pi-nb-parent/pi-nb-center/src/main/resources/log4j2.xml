<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<!--设置log4j2的自身log级别为warn-->
<configuration monitorInterval="30">
    <appenders>
        <console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%p] [%c] %m%n"/><!-- %d %p [%c] - %m%n -->
        </console>
        <RollingFile name="RollingFileInfo" fileName="/home/data/log/msg_center/msg_center_info.log"
        	filePattern="/home/data/log/msg_center/msg_center_info-%d{yyyy-MM-dd}-%i.log">
         <Filters>
	          <ThresholdFilter level="INFO" onMatch="ACCEPT"/>
	          <!-- <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="ACCEPT"/> -->
         </Filters>
         <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%p] [%c] %m%n"/>
         <Policies>
             <TimeBasedTriggeringPolicy/>
             <SizeBasedTriggeringPolicy size="50 MB"/>
         </Policies>
        </RollingFile>
        <RollingFile name="RollingFileDebug" fileName="/home/data/log/msg_center/msg_center_debug.log"
                     filePattern="/home/data/log/msg_center/msg_center_debug-%d{yyyy-MM-dd}-%i.log">
            <Filters>
                <ThresholdFilter level="DEBUG"/>
            </Filters>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%p] [%c] %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
        </RollingFile>
        <RollingFile name="RollingFileError" fileName="/home/data/log/msg_center/msg_center_error.log"
                     filePattern="/home/data/log/msg_center/msg_center_error-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="ERROR"/>
            <PatternLayout charset="UTF-8" pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%p] [%c] %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
        </RollingFile>
    </appenders>

    <loggers>
        <!--过滤掉spring和hibernate的一些无用的debug信息-->
        <logger name="org.springframework" level="INFO">
        	
        </logger>
				<logger name="org.hibernate" level="INFO">
        </logger>        
        <logger name="io.netty.util" level="INFO">
        </logger>
        <logger name = "com.ibatis" level="INFO"></logger>
        <logger name = "java.sql.Connection" level="INFO"></logger>
				<logger name = "java.sql.Statement" level="INFO"></logger>
				<logger name = "java.sql.PreparedStatement" level="INFO"></logger>
				<logger name = "java.sql.ResultSet" level="INFO"></logger>                
        <logger name="com.pi" level="debug"></logger>
        <logger name="com.pi.nbcenter.device.mapper" level="info"></logger>
        <!-- druid配置 -->
        <logger name="druid.sql.Statement" level="info" additivity="false">
            <appender-ref ref="Console"/>
        </logger>
        <logger name="druid.sql.ResultSet" level="info" additivity="false">
            <appender-ref ref="Console"/>
        </logger>          
        <root level="info">
            <appender-ref ref="Console"/>
            <appender-ref ref="RollingFileInfo"/>
            <appender-ref ref="RollingFileDebug"/>
            <appender-ref ref="RollingFileError"/>
        </root>
    </loggers>
</configuration>