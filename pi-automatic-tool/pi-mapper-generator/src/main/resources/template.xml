<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="${namespace}">
	<resultMap id="${resultMapId}" type="${entityFullClassName}">
${resultMapContent}
	</resultMap>

	<sql id="all_columns">
		${all_columns}
	</sql>
	<sql id="updateSet">
${updateSet}
	</sql>
	<sql id="where">
		<where>
${whereSet}			
		</where>
	</sql>
	<sql id="table_name">
		${table_name}
	</sql>

	<select id="findOne" resultMap="${resultMapId}">
		select
		<include refid="all_columns" />
		from
		<include refid="table_name" />
		where id=#{id}
	</select>
	<update id="updateById" parameterType="${entityFullClassName}">
		update <include refid="table_name" />
		set ${updatePrefix} <include refid="updateSet" />
		where ID=#{id} AND VERSION=#{version}
	</update>
	
	<insert id="insertEntity" useGeneratedKeys="true" keyProperty="id"  keyColumn="id" parameterType="${entityFullClassName}">
		insert into <include refid="table_name" />
		(<include refid="all_columns" />)
		values( ${insertValues} )
	</insert>
		
	<select id="findByParam" resultMap="${resultMapId}">
		select <include refid="all_columns" /> from	<include refid="table_name" /> <include refid="where" />
	</select>
</mapper>